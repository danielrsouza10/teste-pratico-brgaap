<mvc:View
    height="100%"
    controllerName="ui5.teste-pratico-brgaap.controller.DetalhesNotaFiscal"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Page
        id="paginaDetalhesRaca"
        title="{i18n>DetalhesDaNotaFiscal}"
        showHeader="true"
        enableScrolling="true"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <ObjectHeader
            id="objectHeader"
            fullScreenOptimized="true"
            intro="{i18n>Id}: {nota>/id}"
            title="{nota>/title}"
            titleActive="false"
            backgroundDesign="Translucent"
            class="sapUiResponsivePadding--header"
			responsive="true"
        >
            <ObjectAttribute
                title="{i18n>UserId}"
                text="{nota>/userId}"
            />
            <statuses>
                <ObjectStatus
                    title="{i18n>Completado}"
                    text="{= ${nota>/completed} ? 'ConcluÃ­do' : 'Pendente' }"
                    state="{= ${nota>/completed} ? 'Success' : 'Error' }"
                />
            </statuses>
        </ObjectHeader>
    </Page>
</mvc:View>
