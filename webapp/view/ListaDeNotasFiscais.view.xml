<mvc:View
    controllerName="ui5.teste-pratico-brgaap.controller.ListaDeNotasFiscais"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Table
        id="tabelaNotasFiscais"
        items="{notas>/}"
        enableBusyIndicator="true"
        alternateRowColors="true"
        growing="true"
        growingThreshold="10"
        showSeparators="All"
        growingScrollToLoad="true"
        class="sapUiResponsiveContentPadding"
    >
        <headerToolbar>
            <OverflowToolbar >
                <Title text="{i18n>TituloListaNotasFiscais}" />
                <ToolbarSpacer />
                <SearchField
                    id="searchFieldNotasFiscais"
                    width="50%"
                    search=".aoFiltrarNotasFiscais"
                />
                <Button
                    type="Transparent"
                    text="{i18n>TituloBotaoReset}"
                    press=".aoResetar"
                    id="resetBtn"
                    tooltip="Resetar filtros"
                />
                <OverflowToolbarButton
                    id="organizarBtn"
                    tooltip="Organizar em Ordem AlfabÃ©tica"
                    type="Transparent"
                    text="Sort"
                    icon="sap-icon://sort"
                    press=".aoOrganizar"
                />
                <OverflowToolbarButton
                    id="agruparBtn"
                    tooltip="Agrupar por Id do Usuario"
                    type="Transparent"
                    text="Group"
                    icon="sap-icon://group-2"
                    press=".aoAgrupar"
                />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="Begin">
                <Text text="Nome" />
            </Column>
            <Column hAlign="Center">
                <Text text="Completado" />
            </Column>
            <Column hAlign="Center">
                <Text text="Detalhes" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{notas>title}" />
                    <CheckBox
                        selected="{notas>completed}"
                        editable="false"
                    />
                    <Button icon="sap-icon://show" press="aoSelecionarItemNaTabela" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
