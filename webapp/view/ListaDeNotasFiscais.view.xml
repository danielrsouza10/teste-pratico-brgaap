<mvc:View
    controllerName="ui5.teste-pratico-brgaap.controller.ListaDeNotasFiscais"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Table
        id="tabelaNotasFiscais"
        items="{notas>/}"
        enableBusyIndicator="true"
        alternateRowColors="true"
        growing="true"
        showSeparators="All"
        growingScrollToLoad="true"
    >
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>TituloListaNotasFiscais}" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".aoFiltrarNotasFiscais"
                />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="Begin">
                <Text text="Nome" />
            </Column>
            <Column hAlign="Center">
                <Text text="Completado" />
            </Column>
            <Column hAlign="Center">
                <Text text="Detalhes" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{notas>title}" />
                    <CheckBox
                        selected="{notas>completed}"
                        editable="false"
                    />
                    <Button icon="sap-icon://show" press="aoSelecionarItemNaTabela" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
